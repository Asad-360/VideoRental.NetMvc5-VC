@model IEnumerable<VidlyMovieRentalApp.Models.Customer>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2><a href="/customer/new" class="btn btn-primary"> New Customer </a></h2>
@if (!Model.Any())
{
    <p>We do not have any Customer yet!</p>
}
else
{
    <table id="customer" class="table table-bordered">
        <thead>

        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
          
        </thead>
    </table>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#customer").DataTable({

                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    }
                ]

            });
            $("#customer").on("click",
                ".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure want to delete the customer?",
                        function () {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                        });
                });
        });
    </script>
}